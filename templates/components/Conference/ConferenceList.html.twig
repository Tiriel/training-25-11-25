<div {{ attributes }}>
    {% if selectedConference %}
        <div class="d-flex justify-content-between align-items-center mb-4">
                <twig:Conference:Details :conference="selectedConference"></twig:Conference:Details>
                <button class="btn btn-outline-secondary"
                    {{ live_action('backToList') }}
                >
                    Back to list
                </button>
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 g-4 mb-5">
            {% for conference in this.conferences %}
                <twig:Conference:Card :conference="conference"/>
            {% else %}
                <div>There are no conferences yet...</div>
            {% endfor %}
        </div>
    {% endif %}
</div>
